<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- 56.0、mybatis的主配置文件 -->
<configuration>

    <!--设置别名-->
    <typeAliases>
        <package name="com.linear.domain"></package>
    </typeAliases>

    <environments default="mysql">

        <!--mysql环境-->
        <environment id="mysql">
            <!--事务类型-->
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"></property>
                <property name="url" value="jdbc:mysql://localhost:3306/w56_mybatis"></property>
                <property name="username" value="root"></property>
                <property name="password" value="root"></property>
            </dataSource>
        </environment>
    </environments>



    <!--指定映射配置文件的位置-->
    <mappers>
        <!--56.7 动态sql-->
        <mapper resource="com/linear/dao/W56_DynamicSQL.xml"></mapper>

        <!--56.8 多表查询-->
        <mapper resource="com/linear/dao/W56_One2Many.xml"></mapper>
        <mapper resource="com/linear/dao/W56_Many2Many.xml"></mapper>
    </mappers>

</configuration>